{% extends 'base.html.twig' %}

{% block title %}Détails de l'Éditeur : {{ editeur.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                {# Header and Title #}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2 text-dark mb-0">Éditeur: <span class="fw-bolder">{{ editeur.nom }}</span></h1>
                    <a href="{{ path('app_editeur_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                </div>

                {# Card for Data Display using DL layout #}
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <dl class="row mb-0">
                            
                            <dt class="col-sm-3 text-muted">ID</dt>
                            <dd class="col-sm-9">{{ editeur.id }}</dd>

                            <dt class="col-sm-3 text-muted">Nom</dt>
                            <dd class="col-sm-9 fs-5">{{ editeur.nom }}</dd>

                            <dt class="col-sm-3 text-muted">Pays</dt>
                            <dd class="col-sm-9">{{ editeur.pays|default('Non spécifié') }}</dd>

                            <dt class="col-sm-3 text-muted">Site Web</dt>
                            <dd class="col-sm-9">
                                {% if editeur.siteWeb %}
                                    <a href="{{ editeur.siteWeb }}" target="_blank" class="text-primary fw-medium">{{ editeur.siteWeb }} <i class="bi bi-box-arrow-up-right"></i></a>
                                {% else %}
                                    N/A
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-3 text-muted">Description</dt>
                            <dd class="col-sm-9">{{ editeur.description|default('Aucune description') }}</dd>

                        </dl>
                    </div>
                </div>
                
                {# Actions Group #}
                <div class="d-flex justify-content-start gap-3 mt-4">
                    
                    {# Edit Button #}
                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>

                    {# Delete Form #}
                    {{ include('editeur/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}