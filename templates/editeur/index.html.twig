{% extends 'base.html.twig' %}

{% block title %}Liste des Éditeurs{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 fw-bold text-dark">
                    <i class="bi bi-buildings-fill text-warning me-2"></i>Gérer les Éditeurs
                </h1>
                <p class="text-muted small mb-0 mt-1">Consultez la liste des sociétés d'édition référencées.</p>
            </div>
            <a href="{{ path('app_editeur_new') }}" class="btn btn-dark text-warning rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-plus-lg me-2"></i>Nouvel Éditeur
            </a>
        </div>

        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="bg-dark text-white">
                        <tr>
                            <th scope="col" class="py-3 ps-4 text-warning" style="width: 80px;">ID</th>
                            <th scope="col" class="py-3">Nom de l'éditeur</th>
                            <th scope="col" class="py-3">Pays</th>
                            <th scope="col" class="py-3">Site Web</th>
                            <th scope="col" class="py-3">Description</th>
                            <th scope="col" class="py-3 text-end pe-4" style="width: 150px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for editeur in editeurs %}
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#{{ editeur.id }}</td>
                                <td class="fw-bold text-dark fs-5">
                                    {{ editeur.nom }}
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border border-secondary border-opacity-25 rounded-pill px-3">
                                        <i class="bi bi-geo-alt-fill me-1 text-warning"></i> {{ editeur.pays|default('N/A') }}
                                    </span>
                                </td>
                                <td>
                                    {% if editeur.siteWeb %}
                                        <a href="{{ editeur.siteWeb }}" target="_blank" class="btn btn-link btn-sm text-decoration-none text-dark fw-bold px-0">
                                            <i class="bi bi-link-45deg me-1"></i>Visiter
                                        </a>
                                    {% else %}
                                        <span class="text-muted small fst-italic">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-secondary small">
                                    {{ editeur.description|length > 50 ? editeur.description|slice(0, 50) ~ '...' : editeur.description }}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded-pill" role="group">
                                        <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="btn btn-sm btn-light border-secondary border-opacity-25 text-dark" title="Voir">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-sm btn-light border-secondary border-opacity-25 text-primary" title="Éditer">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted opacity-25 mb-3">
                                        <i class="bi bi-building-x display-1"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark">Aucun éditeur trouvé</h4>
                                    <p class="text-muted">La base de données des éditeurs est vide.</p>
                                    <a href="{{ path('app_editeur_new') }}" class="btn btn-outline-dark rounded-pill mt-2">
                                        Ajouter un éditeur
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-light border-top p-3">
                <div class="row align-items-center">
                    <div class="col text-muted small">
                        <strong>{{ editeurs|length }}</strong> sociétés enregistrées
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
