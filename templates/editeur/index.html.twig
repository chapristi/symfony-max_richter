{% extends 'base.html.twig' %}

{% block title %}Liste des Éditeurs{% endblock %}

{% block body %}
    <div class="card shadow-sm border-0">
        {# Cabeçalho do Card #}
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h5 mb-0 fw-bold text-dark">Éditeurs</h1>
                <small class="text-muted">Liste des éditeurs de jeux vidéo</small>
            </div>
            <a href="{{ path('app_editeur_new') }}" class="btn btn-primary btn-sm rounded-pill px-3">
                <i class="bi bi-plus-lg me-1"></i> Nouveau
            </a>
        </div>

        {# Tabela de Conteúdo #}
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="ps-4 text-uppercase text-muted small fw-bold" style="width: 50px;">Id</th>
                            <th scope="col" class="text-uppercase text-muted small fw-bold">Nom</th>
                            <th scope="col" class="text-uppercase text-muted small fw-bold">Pays</th>
                            <th scope="col" class="text-uppercase text-muted small fw-bold">Site Web</th>
                            <th scope="col" class="text-uppercase text-muted small fw-bold">Description</th>
                            <th scope="col" class="text-uppercase text-muted small fw-bold text-end pe-4" style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for editeur in editeurs %}
                        <tr>
                            <td class="ps-4 text-muted fw-bold">#{{ editeur.id }}</td>
                            <td class="fw-medium text-dark">{{ editeur.nom }}</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-geo-alt me-1 text-secondary"></i> {{ editeur.pays }}
                                </span>
                            </td>
                            <td>
                                {% if editeur.siteWeb %}
                                    <a href="{{ editeur.siteWeb }}" target="_blank" class="text-decoration-none text-primary btn-link">
                                        <i class="bi bi-box-arrow-up-right small"></i> Visiter
                                    </a>
                                {% else %}
                                    <span class="text-muted small">-</span>
                                {% endif %}
                            </td>
                            <td class="text-secondary small">
                                {# Truncate para descrições longas #}
                                {{ editeur.description|length > 40 ? editeur.description|slice(0, 40) ~ '...' : editeur.description }}
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="btn btn-sm btn-outline-secondary" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-sm btn-outline-primary" title="Éditer">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <div class="mb-2"><i class="bi bi-building fs-1"></i></div>
                                <span>Aucun éditeur trouvé</span>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Rodapé do Card #}
        <div class="card-footer bg-white py-2">
            <small class="text-muted">Total: {{ editeurs|length }} éditeurs</small>
        </div>
    </div>
{% endblock %}