{% extends 'base.html.twig' %}

{% block title %}Modifier le Jeu Vidéo : {{ jeu_video.titre }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 text-dark mb-0">Modification: <span class="fw-bold">{{ jeu_video.titre }}</span></h1>

                    <a href="{{ path('app_jeu_video_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                </div>

                <div class="card shadow-lg border-0">
                    <div class="card-body p-4 p-md-5">
                        <p class="text-muted small mb-4">Mettez à jour les informations du jeu vidéo ci-dessous.</p>

                        {{ include('jeu_video/_form.html.twig', {'button_label': 'Mettre à jour le jeu'}) }}
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <small class="text-muted me-2 align-self-center">Zone de danger:</small>
                    {{ include('jeu_video/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger btn-sm'}) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
