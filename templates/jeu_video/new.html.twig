{% extends 'base.html.twig' %}

{% block title %}Nouveau Jeu Vidéo{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 fw-bold text-dark">
                        <i class="bi bi-controller text-warning me-2"></i>Ajouter un jeu
                    </h1>
                    <a href="{{ path('app_jeu_video_index') }}" class="btn btn-outline-dark rounded-pill px-3">
                        <i class="bi bi-arrow-left me-1"></i> Retour
                    </a>
                </div>

                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-dark text-white p-4">
                        <p class="mb-0 text-white-50 small text-uppercase fw-bold">Formulaire de création</p>
                        <h2 class="h5 mb-0 mt-1 text-warning">Détails du jeu vidéo</h2>
                    </div>

                    <div class="card-body p-4 p-md-5 bg-white">


                        {{ include('jeu_video/_form.html.twig', {'button_label': 'Créer le jeu'}) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
