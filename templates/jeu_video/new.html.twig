{% extends 'base.html.twig' %}

{% block title %}Nouveau Jeu Vidéo{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                {# Header Section with Flexbox for alignment #}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Ajouter un Jeu Vidéo</h1>
                    <a href="{{ path('app_jeu_video_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>

                {# Card Component for the Form #}
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <p class="text-muted small mb-4">Remplissez les informations ci-dessous pour créer une nouvelle fiche.</p>
                        
                        {# Rendering the form #}
                        {{ include('jeu_video/_form.html.twig', {'button_label': 'Créer le jeu'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}