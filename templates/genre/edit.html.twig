{% extends 'base.html.twig' %}

{% block title %}Modifier le genre: {{ genre.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                {# Header and Title #}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 text-dark mb-0">Modification: <span class="fw-bold">{{ genre.nom }}</span></h1>
                    <a href="{{ path('app_genre_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                </div>

                {# Card Component for the Form #}
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <p class="text-muted small mb-4">Mettez à jour les informations du genre ci-dessous.</p>
                        
                        {# Rendering the form, passing the custom button label #}
                        {{ include('genre/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
                    </div>
                </div>
                
                {# Delete Action separated from the form #}
                <div class="d-flex justify-content-end mt-3">
                    <small class="text-muted me-2 align-self-center">Danger Zone:</small>
                    {{ include('genre/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger btn-sm'}) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}