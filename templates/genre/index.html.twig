{% extends 'base.html.twig' %}

{% block title %}Liste des Genres{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 fw-bold text-dark">
                    <i class="bi bi-tags-fill text-warning me-2"></i>Gérer les Genres
                </h1>
                <p class="text-muted small mb-0 mt-1">Gérez les catégories disponibles pour vos jeux.</p>
            </div>
            <a href="{{ path('app_genre_new') }}" class="btn btn-dark text-warning rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-plus-lg me-2"></i>Nouveau Genre
            </a>
        </div>

        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="bg-dark text-white">
                        <tr>
                            <th scope="col" class="py-3 ps-4 text-warning" style="width: 80px;">ID</th>
                            <th scope="col" class="py-3">Nom du Genre</th>
                            <th scope="col" class="py-3">Description</th>
                            <th scope="col" class="py-3 text-center" style="width: 120px;">Statut</th>
                            <th scope="col" class="py-3 text-end pe-4" style="width: 150px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for genre in genres %}
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#{{ genre.id }}</td>
                                <td class="fw-bold text-dark fs-5">
                                    {{ genre.nom }}
                                </td>
                                <td class="text-secondary">
                                    {{ genre.description|length > 60 ? genre.description|slice(0, 60) ~ '...' : genre.description }}
                                </td>
                                <td class="text-center">
                                    {% if genre.actif %}
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">
                                            Actif
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-3">
                                            Inactif
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded-pill" role="group">
                                        <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="btn btn-sm btn-light border-secondary border-opacity-25 text-dark" title="Voir">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-sm btn-light border-secondary border-opacity-25 text-primary" title="Éditer">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="text-muted opacity-25 mb-3">
                                        <i class="bi bi-tags display-1"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark">Aucun genre trouvé</h4>
                                    <p class="text-muted">Commencez par ajouter une catégorie pour classer vos jeux.</p>
                                    <a href="{{ path('app_genre_new') }}" class="btn btn-outline-dark rounded-pill mt-2">
                                        Créer un genre
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-light border-top p-3">
                <div class="row align-items-center">
                    <div class="col text-muted small">
                        <strong>{{ genres|length }}</strong> genres enregistrés
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
