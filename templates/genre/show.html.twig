{% extends 'base.html.twig' %}

{% block title %}DÃ©tails du Genre - {{ genre.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 fw-bold text-dark">
                        <i class="bi bi-card-list text-warning me-2"></i>Fiche Genre
                    </h1>
                    <a href="{{ path('app_genre_index') }}" class="btn btn-outline-dark rounded-pill px-3">
                        <i class="bi bi-arrow-left me-1"></i> Retour liste
                    </a>
                </div>

                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                    <div class="bg-dark text-white p-5 text-center position-relative">
                        <div class="mb-3">
                            <span class="d-inline-block p-3 rounded-circle bg-white text-dark shadow">
                                <i class="bi bi-tag-fill display-4 text-warning"></i>
                            </span>
                        </div>

                        <h2 class="display-5 fw-bold mb-3">{{ genre.nom }}</h2>

                        <div>
                            {% if genre.actif %}
                                <span class="badge bg-success text-white border border-success rounded-pill px-3 py-2">
                                    <i class="bi bi-check-circle-fill me-1"></i> Actif et visible
                                </span>
                            {% else %}
                                <span class="badge bg-secondary text-white border border-secondary rounded-pill px-3 py-2">
                                    <i class="bi bi-slash-circle me-1"></i> Inactif
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="card-body p-4 p-md-5 bg-white">

                        <div class="mb-4">
                            <h5 class="text-uppercase text-muted fs-6 fw-bold mb-3">
                                <i class="bi bi-file-text me-2"></i>Description
                            </h5>
                            <div class="p-4 bg-light rounded-3 border">
                                <p class="mb-0 text-secondary lead fs-6">
                                    {{ genre.description|default('Aucune description fournie pour ce genre.')|nl2br }}
                                </p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center text-muted small mt-4 pt-3 border-top">
                            <i class="bi bi-database me-2"></i>
                            <span>Identifiant technique (ID) : <strong class="text-dark">#{{ genre.id }}</strong></span>
                        </div>
                    </div>

                    <div class="card-footer bg-light p-4 d-flex flex-column flex-sm-row justify-content-between align-items-center gap-3">
                        <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-dark text-warning fw-bold rounded-pill px-4 w-100 w-sm-auto shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Modifier
                        </a>

                        <div class="w-100 w-sm-auto">
                            {{ include('genre/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger w-100 rounded-pill border-0'}) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
