{% extends 'base.html.twig' %}

{% block title %}Détails du Genre: {{ genre.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                {# Header and Title #}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2 text-dark mb-0">Détails du Genre: <span class="fw-bolder">{{ genre.nom }}</span></h1>
                    <a href="{{ path('app_genre_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                </div>

                {# Card for Data Display #}
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <dl class="row mb-0">
                            
                            <dt class="col-sm-3 text-muted">ID</dt>
                            <dd class="col-sm-9">{{ genre.id }}</dd>

                            <dt class="col-sm-3 text-muted">Nom</dt>
                            <dd class="col-sm-9 fs-5">{{ genre.nom }}</dd>

                            <dt class="col-sm-3 text-muted">Description</dt>
                            <dd class="col-sm-9">{{ genre.description|default('N/A') }}</dd>

                            <dt class="col-sm-3 text-muted">Actif</dt>
                            <dd class="col-sm-9">
                                {% if genre.actif %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Oui</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Non</span>
                                {% endif %}
                            </dd>

                        </dl>
                    </div>
                </div>
                
                {# Actions Group #}
                <div class="d-flex justify-content-start gap-3 mt-4">
                    
                    {# Edit Button #}
                    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>

                    {# Delete Form #}
                    {{ include('genre/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}