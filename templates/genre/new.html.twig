{% extends 'base.html.twig' %}

{% block title %}Nouveau Genre{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                {# Card Container #}
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white pt-4 pb-0 border-0 text-center">
                        <h1 class="h3 text-dark">Créer un nouveau Genre</h1>
                    </div>
                    
                    <div class="card-body p-4">
                        {# Form Include #}
                        {{ include('genre/_form.html.twig') }}
                    </div>

                    {# Footer with Back Link #}
                    <div class="card-footer bg-light text-center py-3 border-0">
                        <a href="{{ path('app_genre_index') }}" class="text-decoration-none text-muted fw-bold">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}