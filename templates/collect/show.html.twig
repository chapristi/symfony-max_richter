{% extends 'base.html.twig' %}

{% block title %}Détails de la collection | {{ collect.jeuvideo.titre }}{% endblock %}

{% block body %}
    <div class="container my-5">
        
        {# --- HEADER & MAIN TITLE --- #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0 text-dark">
                <i class="bi bi-disc-fill me-2 text-primary"></i> 
                Détails de l'article
            </h1>
            
            <a href="{{ path('app_collect_collection', {'user_id': collect.utilisateur.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-collection"></i> Retour à la collection
            </a>
        </div>
        
        <p class="text-muted lead">
            {{ collect.jeuvideo.titre }} (Collection de {{ collect.utilisateur.prenom }} {{ collect.utilisateur.nom|default('') }})
        </p>

        <hr class="mb-5">

        <div class="row justify-content-center">
            <div class="col-lg-9 col-xl-8">
                <div class="card shadow-lg border-0">

                    {# --- CARD HEADER: Game Title #}
                    <div class="card-header bg-dark text-white p-4">
                        <h3 class="mb-0 fw-bold">
                            {{ collect.jeuvideo.titre }}
                        </h3>
                        <small class="text-muted-lighter">Fiche de collection</small>
                    </div>

                    <div class="card-body p-4 p-md-5">

                        {# --- SECTION 1: Collection Details (Primary Focus) --- #}
                        <h4 class="h5 mb-4 border-bottom pb-2 text-primary">
                            <i class="bi bi-star-fill me-2"></i> Mon Enregistrement
                        </h4>
                        
                        <dl class="row mb-5">
                            
                            <dt class="col-sm-4 text-muted">Statut :</dt>
                            <dd class="col-sm-8">
                                {% set status_class = collect.statut.name|lower == 'terminé' ? 'success' : (collect.statut.name|lower == 'en cours' ? 'warning' : 'info') %}
                                <span class="badge text-bg-{{ status_class }} fs-6 px-3 py-2">
                                    <i class="bi bi-tag-fill me-1"></i> {{ collect.statut.name|capitalize }}
                                </span>
                            </dd>

                            <dt class="col-sm-4 text-muted mt-3">Prix Acheté :</dt>
                            <dd class="col-sm-8 mt-3">
                                {% if collect.prixAchat is not null %}
                                    <span class="fs-5 fw-bold text-success">{{ collect.prixAchat|number_format(2, ',', ' ') }} €</span>
                                {% else %}
                                    Non renseigné
                                {% endif %}
                            </dd>

                            <dt class="col-sm-4 text-muted">Date d'Achat :</dt>
                            <dd class="col-sm-8">
                                {{ collect.dateAchat ? collect.dateAchat|date('d/m/Y') : 'N/A' }}
                            </dd>
                            
                            {% set prix_neuf = collect.jeuvideo.prix|default(0) * 1 %}
                            {% set prix_achete = collect.prixAchat|default(0) * 1 %}
                            {% set economie = prix_neuf - prix_achete %}

                            {% if prix_neuf > 0 and collect.prixAchat is not null %}
                                <dt class="col-sm-4 mt-3 text-muted">Économie Réalisée :</dt>
                                <dd class="col-sm-8 mt-3">
                                    <div class="alert alert-success p-2 mb-0">
                                        <i class="bi bi-wallet-fill me-1"></i>
                                        **{{ economie|number_format(2, ',', ' ') }} €**
                                    </div>
                                </dd>
                            {% endif %}
                        </dl>

                        {# --- SECTION 2: Game Details --- #}
                        <h4 class="h5 mb-4 border-bottom pb-2 text-primary">
                            <i class="bi bi-joystick me-2"></i> Informations sur le Jeu
                        </h4>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Éditeur :</dt>
                            <dd class="col-sm-8">{{ collect.jeuvideo.editeur.nom|default('N/A') }}</dd>

                            <dt class="col-sm-4">Développeur :</dt>
                            <dd class="col-sm-8">{{ collect.jeuvideo.developpeur.nom|default('N/A') }}</dd>

                            <dt class="col-sm-4">Genre :</dt>
                            <dd class="col-sm-8">{{ collect.jeuvideo.genre.nom|default('N/A') }}</dd>

                            <dt class="col-sm-4">Date de Sortie :</dt>
                            <dd class="col-sm-8">
                                {{ collect.jeuvideo.dateSortie ? collect.jeuvideo.dateSortie|date('d/m/Y') : 'N/A' }}
                            </dd>

                            <dt class="col-sm-4">Prix Neuf (Référence) :</dt>
                            <dd class="col-sm-8 fw-medium">{{ collect.jeuvideo.prix|default('0.00')|number_format(2, ',', ' ') }} €</dd>
                        </dl>
                        
                        {# --- SECTION 3: Comments --- #}
                        {% if collect.commentaire is not empty %}
                            <h4 class="h5 mt-4 mb-3 border-bottom pb-2 text-primary">
                                <i class="bi bi-chat-left-text-fill me-2"></i> Commentaire Personnel
                            </h4>
                            <div class="border rounded p-3 bg-light">
                                <p class="mb-0">{{ collect.commentaire|nl2br }}</p>
                            </div>
                        {% endif %}
                        
                    </div>
                    
                    {# --- CARD FOOTER: Actions --- #}
                    <div class="card-footer d-flex justify-content-end p-4 bg-light border-0">
                        <a href="{{ path('app_collect_edit', {'id': collect.id}) }}" class="btn btn-warning btn-lg shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i> Modifier cet enregistrement
                        </a>
                        {# Assuming the delete partial works on the 'collect' object and has modal confirmation #}
                        {{ include('collect/_delete_form.html.twig', {'collect': collect, 'button_class': 'btn btn-outline-danger ms-3'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}