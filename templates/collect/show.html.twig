{% extends 'base.html.twig' %}

{% block title %}Détails Collection - {{ collect.jeuvideo.titre }}{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 fw-bold text-dark">
                    <i class="bi bi-collection-fill text-warning me-2"></i>Fiche Collection
                </h1>
                <p class="text-muted small mb-0 mt-1">Propriétaire : <strong>{{ collect.utilisateur.prenom }} {{ collect.utilisateur.nom|default('') }}</strong></p>
            </div>

            <a href="{{ path('app_collect_collection', {'user_id': collect.utilisateur.id}) }}" class="btn btn-outline-dark rounded-pill px-3">
                <i class="bi bi-arrow-left me-1"></i> Retour collection
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                    <div class="bg-dark text-white p-5 text-center position-relative">
                        <div class="mb-3">
                            <span class="d-inline-block p-3 rounded-circle bg-white text-dark shadow">
                                <i class="bi bi-controller display-4 text-warning"></i>
                            </span>
                        </div>

                        <h2 class="display-5 fw-bold mb-2">{{ collect.jeuvideo.titre }}</h2>
                        <span class="badge bg-warning text-dark fw-bold fs-6 px-3 py-2">
                             {{ collect.jeuvideo.genre.nom|default('Genre inconnu') }}
                        </span>
                    </div>

                    <div class="card-body p-4 p-md-5 bg-white">
                        <div class="row g-5">

                            <div class="col-md-6 border-end-md">
                                <h4 class="h5 mb-4 fw-bold text-dark">
                                    <i class="bi bi-bookmark-star-fill text-warning me-2"></i>Mon Exemplaire
                                </h4>

                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom-0">
                                        <span class="text-muted">État de la collection</span>
                                        {% set status_lower = collect.statut.name|lower %}
                                        {% set badge_class = 'bg-secondary' %}
                                        {% if 'termin' in status_lower %}{% set badge_class = 'bg-success' %}
                                        {% elseif 'cours' in status_lower %}{% set badge_class = 'bg-warning text-dark' %}
                                        {% elseif 'souhait' in status_lower %}{% set badge_class = 'bg-info text-dark' %}
                                        {% endif %}

                                        <span class="badge {{ badge_class }} rounded-pill px-3">
                                            {{ collect.statut.name|capitalize }}
                                        </span>
                                    </li>

                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Date d'acquisition</span>
                                        <span class="fw-bold text-dark">{{ collect.dateAchat ? collect.dateAchat|date('d/m/Y') : 'Non renseignée' }}</span>
                                    </li>

                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Prix d'achat</span>
                                        {% if collect.prixAchat is not null %}
                                            <span class="fw-bold text-dark">{{ collect.prixAchat|number_format(2, ',', ' ') }} €</span>
                                        {% else %}
                                            <span class="text-muted fst-italic">N/A</span>
                                        {% endif %}
                                    </li>
                                </ul>

                                {% set prix_neuf = collect.jeuvideo.prix|default(0) * 1 %}
                                {% set prix_achete = collect.prixAchat|default(0) * 1 %}
                                {% set economie = prix_neuf - prix_achete %}

                                {% if prix_neuf > 0 and collect.prixAchat is not null and economie > 0 %}
                                    <div class="alert alert-success border-0 bg-success bg-opacity-10 mt-3 d-flex align-items-center">
                                        <i class="bi bi-piggy-bank-fill text-success fs-3 me-3"></i>
                                        <div>
                                            <small class="text-uppercase fw-bold text-success d-block" style="font-size: 0.7rem;">Économie réalisée</small>
                                            <span class="fs-5 fw-bold text-success-emphasis">+{{ economie|number_format(2, ',', ' ') }} €</span>
                                            <small class="text-muted d-block" style="font-size: 0.75rem;">par rapport au prix public ({{ prix_neuf }} €)</small>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if collect.commentaire is not empty %}
                                    <div class="mt-4 p-3 bg-light rounded-3 border border-secondary border-opacity-10">
                                        <small class="text-uppercase text-muted fw-bold mb-2 d-block" style="font-size: 0.7rem;">Note personnelle</small>
                                        <p class="mb-0 text-secondary fst-italic small">« {{ collect.commentaire|nl2br }} »</p>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="col-md-6">
                                <h4 class="h5 mb-4 fw-bold text-dark">
                                    <i class="bi bi-info-circle-fill text-warning me-2"></i>Détails du Jeu
                                </h4>

                                <div class="p-4 bg-light rounded-4">
                                    <div class="mb-3">
                                        <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem;">Éditeur</small>
                                        <span class="fw-bold text-dark">{{ collect.jeuvideo.editeur.nom|default('Non spécifié') }}</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem;">Développeur</small>
                                        <span class="fw-bold text-dark">{{ collect.jeuvideo.developpeur.nom|default('Non spécifié') }}</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem;">Date de sortie officielle</small>
                                        <span class="fw-bold text-dark">{{ collect.jeuvideo.dateSortie ? collect.jeuvideo.dateSortie|date('d F Y') : 'Inconnue' }}</span>
                                    </div>

                                    <hr class="border-secondary opacity-25">

                                    <div class="d-flex align-items-center justify-content-between">
                                        <span class="text-muted small">Prix catalogue</span>
                                        <span class="badge bg-dark text-warning fs-6">
                                            {{ collect.jeuvideo.prix|default('0.00')|number_format(2, ',', ' ') }} €
                                        </span>
                                    </div>
                                </div>

                                <div class="mt-4 text-center">
                                    <a href="{{ path('app_jeu_video_show', {'id': collect.jeuvideo.id}) }}" class="btn btn-link text-dark text-decoration-none fw-bold small">
                                        Voir la fiche globale du jeu <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer bg-light p-4 d-flex flex-column flex-sm-row justify-content-end align-items-center gap-3">
                        <a href="{{ path('app_collect_edit', {'id': collect.id}) }}" class="btn btn-dark text-warning fw-bold rounded-pill px-4 shadow-sm w-100 w-sm-auto">
                            <i class="bi bi-pencil-square me-2"></i>Modifier l'entrée
                        </a>

                        <div class="w-100 w-sm-auto">
                            {{ include('collect/_delete_form.html.twig', {'collect': collect, 'button_class': 'btn btn-outline-danger border-0 rounded-pill w-100'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        @media (min-width: 768px) {
            .border-end-md { border-right: 1px solid var(--bs-border-color) !important; }
        }
    </style>
{% endblock %}
