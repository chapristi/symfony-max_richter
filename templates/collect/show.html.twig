{% extends 'base.html.twig' %}

{% block title %}Détails de la collection | {{ collect.jeuvideo.titre }}{% endblock %}

{% block body %}
    <div class="container my-5">
        
        {# --- HEADER & MAIN NAVIGATION --- #}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h2 mb-0 text-dark">
                <i class="bi bi-disc-fill me-2 text-primary"></i> 
                Fiche de Collection
            </h1>
            
            <a href="{{ path('app_collect_collection', {'user_id': collect.utilisateur.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-collection"></i> Retour à la collection
            </a>
        </div>
        
        <p class="text-muted lead fw-normal mb-5">
            Jeu: **{{ collect.jeuvideo.titre }}** (Appartient à {{ collect.utilisateur.prenom }} {{ collect.utilisateur.nom|default('') }})
        </p>

        {# --- MAIN CONTENT ROW --- #}
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0">

                    {# --- CARD HEADER: Game Title & Image Placeholder --- #}
                    <div class="card-header bg-dark text-white p-4">
                        <div class="row align-items-center">
                            
                            {# Image Placeholder (Optional: replace with actual collect.jeuvideo.imageUrl if available) #}
                            <div class="col-auto">
                                <i class="bi bi-controller fs-1 text-primary"></i>
                            </div>

                            <div class="col">
                                <h3 class="mb-0 fw-bold">
                                    {{ collect.jeuvideo.titre }}
                                </h3>
                                <small class="text-muted-lighter">Détails de l'entrée dans la collection.</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <div class="row">

                            {# --- COLUMN 1: Collection Details (Primary Focus) --- #}
                            <div class="col-md-6 border-end-md pe-md-4">
                                <h4 class="h5 mb-4 border-bottom pb-2 text-success">
                                    <i class="bi bi-tags-fill me-2"></i> Mon Enregistrement
                                </h4>
                                
                                <dl class="row mb-5">
                                    
                                    <dt class="col-sm-4 text-muted">Statut :</dt>
                                    <dd class="col-sm-8">
                                        {% set status_class = collect.statut.name|lower == 'terminé' ? 'success' : (collect.statut.name|lower == 'en cours' ? 'warning' : 'info') %}
                                        <span class="badge text-bg-{{ status_class }} fs-6 px-3 py-2">
                                            <i class="bi bi-tag-fill me-1"></i> {{ collect.statut.name|capitalize }}
                                        </span>
                                    </dd>

                                    <dt class="col-sm-4 text-muted mt-3">Date d'Achat :</dt>
                                    <dd class="col-sm-8 mt-3">
                                        {{ collect.dateAchat ? collect.dateAchat|date('d/m/Y') : 'N/A' }}
                                    </dd>

                                    <dt class="col-sm-4 text-muted">Prix Acheté :</dt>
                                    <dd class="col-sm-8">
                                        {% if collect.prixAchat is not null %}
                                            <span class="fs-5 fw-bold text-success">{{ collect.prixAchat|number_format(2, ',', ' ') }} €</span>
                                        {% else %}
                                            Non renseigné
                                        {% endif %}
                                    </dd>
                                    
                                    {% set prix_neuf = collect.jeuvideo.prix|default(0) * 1 %}
                                    {% set prix_achete = collect.prixAchat|default(0) * 1 %}
                                    {% set economie = prix_neuf - prix_achete %}

                                    {% if prix_neuf > 0 and collect.prixAchat is not null %}
                                        <dt class="col-sm-4 mt-3 text-muted">Économie :</dt>
                                        <dd class="col-sm-8 mt-3">
                                            <div class="alert alert-success p-2 mb-0">
                                                <i class="bi bi-wallet-fill me-1"></i>
                                                **{{ economie|number_format(2, ',', ' ') }} €**
                                            </div>
                                        </dd>
                                    {% endif %}
                                </dl>

                                {# --- Commentaire --- #}
                                {% if collect.commentaire is not empty %}
                                    <h5 class="h6 mb-3 border-bottom pb-1 text-secondary">
                                        <i class="bi bi-chat-left-text-fill me-2"></i> Commentaire
                                    </h5>
                                    <div class="border rounded p-3 bg-light">
                                        <p class="mb-0 small">{{ collect.commentaire|nl2br }}</p>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {# --- COLUMN 2: Game Details --- #}
                            <div class="col-md-6 ps-md-4">
                                <h4 class="h5 mb-4 border-bottom pb-2 text-primary">
                                    <i class="bi bi-info-circle-fill me-2"></i> Informations du Jeu
                                </h4>
                                <dl class="row mb-4">
                                    <dt class="col-sm-5">Éditeur :</dt>
                                    <dd class="col-sm-7">{{ collect.jeuvideo.editeur.nom|default('N/A') }}</dd>

                                    <dt class="col-sm-5">Développeur :</dt>
                                    <dd class="col-sm-7">{{ collect.jeuvideo.developpeur.nom|default('N/A') }}</dd>

                                    <dt class="col-sm-5">Genre :</dt>
                                    <dd class="col-sm-7">{{ collect.jeuvideo.genre.nom|default('N/A') }}</dd>

                                    <dt class="col-sm-5">Date de Sortie :</dt>
                                    <dd class="col-sm-7">
                                        {{ collect.jeuvideo.dateSortie ? collect.jeuvideo.dateSortie|date('d/m/Y') : 'N/A' }}
                                    </dd>

                                    <dt class="col-sm-5 fw-bold">Prix Neuf (Réf.) :</dt>
                                    <dd class="col-sm-7 fw-bold">{{ collect.jeuvideo.prix|default('0.00')|number_format(2, ',', ' ') }} €</dd>
                                </dl>
                            </div>

                        </div>
                    </div>
                    
                    {# --- CARD FOOTER: Actions --- #}
                    <div class="card-footer d-flex justify-content-end p-4 bg-light border-0">
                        <a href="{{ path('app_collect_edit', {'id': collect.id}) }}" class="btn btn-warning btn-lg shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i> Modifier l'entrée
                        </a>
                        {# Use the modernized delete partial #}
                        {{ include('collect/_delete_form.html.twig', {'collect': collect, 'button_class': 'btn btn-outline-danger ms-3'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}