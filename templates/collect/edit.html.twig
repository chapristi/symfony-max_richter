{% extends 'base.html.twig' %}

{% block title %}Modifier Collection - {{ collect.jeuvideo.titre }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 fw-bold text-dark">
                        <i class="bi bi-pencil-square text-warning me-2"></i>Modifier l'entrée
                    </h1>
                    <a href="{{ path('app_collect_collection', {'user_id': collect.utilisateur.id}) }}" class="btn btn-outline-dark rounded-pill px-3">
                        <i class="bi bi-arrow-left me-1"></i> Retour
                    </a>
                </div>

                <div class="card shadow-lg border-0 rounded-4 mb-4">
                    <div class="card-header bg-dark text-white p-4">
                        <p class="mb-0 text-white-50 small text-uppercase fw-bold">Édition</p>
                        <h2 class="h5 mb-0 mt-1 text-warning">{{ collect.jeuvideo.titre }}</h2>
                    </div>

                    <div class="card-body p-4 p-md-5 bg-white">
                        {{ include('collect/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>

                <div class="card border-danger border-opacity-25 bg-danger bg-opacity-10 rounded-4 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center p-3">
                        <div class="text-danger small fw-bold">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Supprimer de la collection
                        </div>
                        {{ include('collect/_delete_form.html.twig', {'button_class': 'btn btn-sm btn-danger rounded-pill px-3 fw-bold'}) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
