{% extends 'base.html.twig' %}

{% block title %}Nouvelle Entrée Collection{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 fw-bold text-dark">
                        <i class="bi bi-bookmark-plus-fill text-warning me-2"></i>Nouvelle Entrée
                    </h1>
                    <a href="{{ path('app_collect_index') }}" class="btn btn-outline-dark rounded-pill px-3">
                        <i class="bi bi-arrow-left me-1"></i> Retour
                    </a>
                </div>

                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-dark text-white p-4">
                        <p class="mb-0 text-white-50 small text-uppercase fw-bold">Gestion Collection</p>
                        <h2 class="h5 mb-0 mt-1 text-warning">Ajouter un jeu</h2>
                    </div>

                    <div class="card-body p-4 p-md-5 bg-white">
                        <div class="alert alert-light border-start border-warning border-4 mb-4" role="alert">
                            <i class="bi bi-info-circle-fill text-warning me-2"></i>
                            <small>Sélectionnez un jeu et définissez son statut (possédé, souhaité, terminé) pour l'ajouter à votre liste.</small>
                        </div>

                        {{ include('collect/_form.html.twig', {'button_label': 'Ajouter à la Collection'}) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
