{# 
    This partial uses a Bootstrap Modal for a modern confirmation dialog.
    It expects the 'collect' object and the optional 'button_class' variable.
#}

{% set modal_id = 'deleteModalCollect' ~ collect.id %}

{# 1. The Trigger Button (opens the modal) #}
<button type="button" 
        class="{{ button_class|default('btn btn-outline-danger') }}"
        data-bs-toggle="modal" 
        data-bs-target="#{{ modal_id }}">
    <i class="bi bi-trash-fill"></i> Supprimer
</button>


{# 2. The Bootstrap Modal Structure #}
<div class="modal fade" id="{{ modal_id }}" tabindex="-1" aria-labelledby="{{ modal_id }}Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="{{ modal_id }}Label">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirmation de Suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir **définitivement supprimer** l'entrée de collection pour le jeu :</p>
                <p class="fw-bold text-danger">{{ collect.jeuvideo.titre }}</p>
                <p class="text-muted small">Cette action est irréversible et ne supprime que cet enregistrement de collection.</p>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Annuler
                </button>
                
                {# The ACTUAL Delete Form Submission #}
                <form method="post" action="{{ path('app_collect_delete', {'id': collect.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ collect.id) }}">
                    <button type="submit" class="btn btn-danger">
                        Confirmer la Suppression
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>