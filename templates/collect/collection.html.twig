{% extends 'base.html.twig' %}

{% block title %}Collection de {{ utilisateur.prenom }} {{ utilisateur.nom|default('') }}{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="card shadow-lg border-0 rounded-4 mb-5 overflow-hidden">
            <div class="card-body p-0">
                <div class="row g-0">
                    <div class="col-md-4 bg-dark text-white d-flex flex-column justify-content-center align-items-center p-5">
                        {% set avatar_seed = utilisateur.id|default('user') %}
                        <img src="https://api.dicebear.com/9.x/avataaars/svg?seed={{ avatar_seed }}"
                             alt="Avatar"
                             class="rounded-circle border border-4 border-warning shadow mb-3 bg-white"
                             style="width: 120px; height: 120px;">

                        <h2 class="h3 fw-bold mb-1">{{ utilisateur.prenom }} {{ utilisateur.nom|default('') }}</h2>
                        <span class="badge bg-warning text-dark rounded-pill px-3">
                            @{{ utilisateur.pseudo }}
                        </span>
                    </div>
                    <div class="col-md-8 p-4 p-md-5 d-flex flex-column justify-content-center bg-white">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h1 class="h3 fw-bold text-dark mb-1">Bibliothèque de jeux</h1>
                                <p class="text-muted small">Gérez et consultez les titres de cette collection.</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_collect_index') }}" class="btn btn-outline-dark rounded-pill px-3">
                                    <i class="bi bi-arrow-left me-1"></i> Retour
                                </a>
                                <a href="{{ path('app_collect_new', {'id': utilisateur.id}) }}" class="btn btn-dark text-warning rounded-pill px-3 fw-bold shadow-sm">
                                    <i class="bi bi-plus-lg me-1"></i> Ajouter un jeu
                                </a>
                            </div>
                        </div>

                        <div class="d-flex gap-4 border-top pt-4">
                            <div class="text-center">
                                <span class="d-block fw-bold fs-4 text-dark">{{ collection|length }}</span>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Total Jeux</small>
                            </div>

                            {% set total_economie = 0 %}
                            {% for c in collection %}
                                {% set p_neuf = c.jeuvideo.prix|default(0) %}
                                {% set p_achat = c.prixAchat|default(0) %}
                                {% if c.prixAchat is not null %}
                                    {% set total_economie = total_economie + (p_neuf - p_achat) %}
                                {% endif %}
                            {% endfor %}

                            <div class="text-center border-start ps-4">
                                <span class="d-block fw-bold fs-4 text-success">+{{ total_economie|number_format(2, ',', ' ') }} €</span>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Économie Globale</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            {% if collection is not empty %}
                {% for collect in collection %}

                    {% set status_lower = collect.statut.name|lower %}
                    {% set border_color = 'border-secondary' %}
                    {% set badge_bg = 'bg-secondary' %}
                    {% set icon = 'bi-hourglass-split' %}

                    {% if 'termin' in status_lower %}
                        {% set border_color = 'border-success' %}
                        {% set badge_bg = 'bg-success' %}
                        {% set icon = 'bi-check-circle-fill' %}
                    {% elseif 'cours' in status_lower %}
                        {% set border_color = 'border-warning' %}
                        {% set badge_bg = 'bg-warning text-dark' %}
                        {% set icon = 'bi-controller' %}
                    {% elseif 'souhait' in status_lower %}
                        {% set border_color = 'border-info' %}
                        {% set badge_bg = 'bg-info text-dark' %}
                        {% set icon = 'bi-gift-fill' %}
                    {% endif %}

                    {% set dynamic_cover_url = 'https://picsum.photos/400/200?random=' ~ collect.jeuvideo.id %}
                    {% set image_src = collect.jeuvideo.imageUrl and collect.jeuvideo.imageUrl != "" ? asset(collect.jeuvideo.imageUrl) : dynamic_cover_url %}

                    <div class="col">
                        <div class="card h-100 border-0 shadow hover-card overflow-hidden">
                            <div class="position-relative" style="height: 180px;">
                                <img src="{{ image_src }}" class="w-100 h-100 object-fit-cover" alt="{{ collect.jeuvideo.titre }}">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge {{ badge_bg }} shadow-sm">
                                        <i class="bi {{ icon }} me-1"></i> {{ collect.statut.name }}
                                    </span>
                                </div>
                                <div class="position-absolute bottom-0 start-0 w-100 p-2 bg-gradient-dark">
                                    <h5 class="text-white mb-0 fw-bold text-truncate text-shadow">{{ collect.jeuvideo.titre }}</h5>
                                </div>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-light text-dark border">{{ collect.jeuvideo.genre.nom }}</span>
                                    <small class="text-muted">{{ collect.jeuvideo.editeur.nom }}</small>
                                </div>

                                <div class="bg-light rounded p-2 mb-3 small">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-muted">Prix public:</span>
                                        <span class="text-decoration-line-through">{{ collect.jeuvideo.prix|number_format(2) }} €</span>
                                    </div>
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span class="text-dark">Payé:</span>
                                        {% if collect.prixAchat is not null %}
                                            <span class="text-success">{{ collect.prixAchat|number_format(2) }} €</span>
                                        {% else %}
                                            <span>-</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mt-auto d-flex justify-content-between align-items-center pt-2 border-top">
                                    <a href="{{ path('app_collect_show_by_ids', {'collect_id': collect.id}) }}" class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                        Voir fiche
                                    </a>
                                    <div class="btn-group">
                                        <a href="{{ path('app_collect_edit', {'id': collect.id}) }}" class="btn btn-sm btn-light text-secondary" title="Modifier">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        {{ include('collect/_delete_form.html.twig', {'collect': collect, 'button_class': 'btn btn-sm btn-light text-danger'}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-light border border-secondary border-opacity-25 rounded-4 p-5 text-center">
                        <i class="bi bi-joystick display-4 text-muted mb-3 d-block"></i>
                        <h4 class="fw-bold text-dark">Collection vide</h4>
                        <p class="text-muted">Cet utilisateur n'a pas encore ajouté de jeux à sa collection.</p>
                        <a href="{{ path('app_collect_new', {'id': utilisateur.id}) }}" class="btn btn-warning fw-bold rounded-pill px-4 mt-2">
                            Commencer la collection
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <style>
        .object-fit-cover { object-fit: cover; }
        .bg-gradient-dark { background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); }
        .text-shadow { text-shadow: 0 2px 4px rgba(0,0,0,0.8); }
        .hover-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
        .hover-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important; }
    </style>
{% endblock %}
