{% extends 'base.html.twig' %}

{% block title %}Gestion des Collections{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="d-flex justify-content-between align-items-center mb-5 border-bottom border-secondary pb-3">
            <div>
                <h1 class="h3 mb-0 fw-bold text-dark">
                    <i class="bi bi-people-fill text-warning me-2"></i>Espace Communautaire
                </h1>
                <p class="text-muted small mb-0 mt-1">Explorez les collections des autres membres.</p>
            </div>
            <span class="badge bg-dark text-warning rounded-pill px-3 py-2 shadow-sm">
                {{ utilisateurs|length }} Membres
            </span>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            {% for utilisateur in utilisateurs %}

                {% set avatar_seed = utilisateur.id|default(loop.index) %}
                {% set avatar_url = 'https://api.dicebear.com/9.x/avataaars/svg?seed=' ~ avatar_seed %}

                <div class="col">
                    <div class="card h-100 border-0 shadow rounded-4 hover-card overflow-hidden">

                        <div class="bg-dark position-relative" style="height: 100px;">
                            <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" style="background-image: radial-gradient(circle, #ffc107 1px, transparent 1px); background-size: 10px 10px;"></div>
                        </div>

                        <div class="card-body text-center pt-0 position-relative">
                            <div class="position-absolute top-0 start-50 translate-middle">
                                <img src="{{ avatar_url }}"
                                     alt="Avatar {{ utilisateur.pseudo }}"
                                     class="rounded-circle border border-4 border-white bg-white shadow-sm"
                                     style="width: 100px; height: 100px; object-fit: cover;">
                            </div>

                            <div class="mt-5 pt-3">
                                <h5 class="card-title fw-bold text-dark mb-0">
                                    {{ utilisateur.prenom }} {{ utilisateur.nom|default('') }}
                                </h5>
                                <p class="text-muted small mb-3">@{{ utilisateur.pseudo }}</p>

                                {# Correction ici : suppression du fallback vers .collects car l'objet est un tableau plat #}
                                {% set count = utilisateur.gameCount|default(0) %}
                                <div class="mb-4">
                                    <span class="badge bg-warning text-dark border border-warning border-opacity-25 rounded-pill px-3 py-2 fw-bold">
                                        <i class="bi bi-controller me-1"></i>
                                        {{ count }} jeu{{ count > 1 ? 'x' : '' }}
                                    </span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="{{ path('app_collect_collection', {'user_id': utilisateur.id}) }}" class="btn btn-dark text-warning fw-bold rounded-pill shadow-sm">
                                        <i class="bi bi-eye-fill me-1"></i> Voir la collection
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-light border-top text-center py-2">
                            <small class="text-muted" style="font-size: 0.7rem;">
                                Membre actif
                            </small>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="text-muted opacity-25 mb-3">
                        <i class="bi bi-people display-1"></i>
                    </div>
                    <h4 class="h5 fw-bold text-dark">Aucun membre trouvé</h4>
                    <p class="text-muted">La communauté est encore vide.</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .hover-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
        .hover-card:hover { transform: translateY(-5px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; }
    </style>
{% endblock %}
